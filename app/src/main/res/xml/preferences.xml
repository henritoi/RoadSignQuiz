<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="4"
        android:entries="@array/guesses_list"
        android:entryValues="@array/guesses_list"
        android:key="pref_numberOfChoices"
        android:persistent="true"
        android:summary="@string/number_of_choices_description"
        android:title="@string/number_of_choices" />

    <MultiSelectListPreference
        android:defaultValue="@array/sign_groups_list"
        android:entries="@array/sign_groups_list"
        android:entryValues="@array/sign_groups_list_values"
        android:key="pref_signGroupsToInclude"
        android:persistent="true"
        android:summary="@string/sign_groups_desriptions"
        android:title="@string/sign_groups" />
</PreferenceScreen>